// Configuração do Prettier para o ambiente DevContainer
{
    "semi": true,
    "trailingComma": "all",
    "singleQuote": false,
    "printWidth": 80,
    "tabWidth": 4,
    "useTabs": false,
    "quoteProps": "as-needed",
    "bracketSpacing": true,
    "bracketSameLine": false,
    "arrowParens": "always",
    "endOfLine": "lf",
    "embeddedLanguageFormatting": "auto",
    "overrides":
        [
            { "files": "*.json", "options": { "tabWidth": 2 } },
            {
                "files": "*.md",
                "options": { "printWidth": 100, "proseWrap": "always" }
            },
            { "files": "*.toml", "options": { "tabWidth": 2 } }
        ]
}
