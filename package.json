{
  "name": "ninots",
  "version": "0.1.0",
  "description": "Um framework web experimental construído com Bun.js e TypeScript.",
  "author": "João Vitor de Jesus Oliveira <contato@joaovjo.com.br>",
  "license": "MIT",
  "type": "module",
  "exports": {
    ".": "./src/index.ts"
  },
  "scripts": {
    "dev": "bun --watch src/index.ts",
    "start": "bun src/index.ts",
    "test": "bun test",
    "typecheck": "tsc --noEmit",
    "docs": "typedoc --out docs src/index.ts --readme README.md"
  },
  "files": [
    "dist",
    "src"
  ],
  "keywords": [
    "bun",
    "bunjs",
    "typescript",
    "framework",
    "microframework",
    "web"
  ],
  "dependencies": {
    "zod": "^3.24.2"
  },
  "devDependencies": {
    "@types/bun": "^1.2.8",
    "typedoc": "^0.28.2",
    "typescript": "^5.8.2"
  }
}
