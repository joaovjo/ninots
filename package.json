{
  "name": "ninots",
  "version": "0.1.0",
  "description": "Framework backend modular e escalável construído com Bun.js e TypeScript, focado em alta performance e manutenibilidade.",
  "author": "João Vitor de Jesus Oliveira <contato@joaovjo.com.br>",
  "license": "MIT",
  "type": "module",
  "scripts": {
    "dev": "bun --watch src/main.ts",
    "start": "bun src/main.ts",
    "test": "bun test",
    "typecheck": "tsc --noEmit",
    "docs": "typedoc",
    "cli": "bun run src/core/interfaces/cli/index.ts",
    "ninots": "bun run src/core/interfaces/cli/index.ts"
  },
  "files": [
    "dist",
    "packages"
  ],
  "keywords": [
    "bun",
    "bunjs",
    "typescript",
    "framework",
    "backend",
    "modular",
    "scalable",
    "high-performance",
    "server",
    "api",
    "rest",
    "http"
  ],
  "dependencies": {
    "zod": "^3.24.2",
    "ninorm": "link:ninorm"
  },
  "devDependencies": {
    "@types/bun": "^1.2.8",
    "bun-types": "^1.2.10",
    "typedoc": "^0.28.2",
    "typedoc-plugin-markdown": "^4.6.3",
    "typescript": "^5.8.2"
  }
}