{
  "projectName": "ninots",
  "description": "Framework backend modular e escalável construído com Bun.js e TypeScript, focado em alta performance e manutenibilidade",
  "version": "0.1.0",
  "createdAt": "2025-04-19",
  "updatedAt": "2025-04-20",
  "typescript": {
    "version": "5.8.2",
    "features": {
      "decorators": {
        "enabled": true,
        "configuration": {
          "experimentalDecorators": true,
          "emitDecoratorMetadata": true
        },
        "notes": "TypeScript 5.0+ suporta decoradores nativamente, mas mantemos as configurações tradicionais para compatibilidade"
      },
      "bundlerModuleResolution": {
        "enabled": true,
        "configuration": {
          "moduleResolution": "bundler",
          "allowImportingTsExtensions": true,
          "verbatimModuleSyntax": true
        },
        "notes": "Usa o novo modo de resolução de módulos otimizado para bundlers"
      },
      "strictTypeChecking": {
        "enabled": true,
        "configuration": {
          "strict": true,
          "noUncheckedIndexedAccess": true,
          "exactOptionalPropertyTypes": true,
          "noImplicitOverride": true
        },
        "notes": "Configurações estritas para garantir maior segurança de tipos"
      },
      "pathAliases": {
        "enabled": true,
        "configuration": {
          "paths": {
            "@/*": ["./*"],
            "@app/*": ["app/*"],
            "@domain/*": ["domain/*"],
            "@shared/*": ["shared/*"]
          }
        },
        "notes": "Aliases de caminho para importações mais claras e organizadas"
      }
    }
  },
  "architecture": {
    "pattern": "Clean Architecture",
    "layers": [
      {
        "name": "Domain",
        "path": "src/domain",
        "responsibilities": ["Entidades", "Regras de negócio", "Value objects"]
      },
      {
        "name": "Application",
        "path": "src/application",
        "responsibilities": ["Use cases", "DTOs", "Services"]
      },
      {
        "name": "Infrastructure",
        "path": "src/infrastructure",
        "responsibilities": ["Database", "HTTP", "Repositories"]
      },
      {
        "name": "Interfaces",
        "path": "src/interfaces",
        "responsibilities": ["HTTP controllers", "WebSocket handlers"]
      },
      {
        "name": "App",
        "path": "src/app",
        "responsibilities": ["Routes", "Controllers", "Entry points"]
      }
    ]
  },
  "patterns": {
    "SOLID": true,
    "DDD": true,
    "TDD": true,
    "DRY": true
  },
  "tools": {
    "bundler": "Bun",
    "runtime": "Bun",
    "validation": "Zod",
    "documentation": "TypeDoc"
  },
  "dependencies": {
    "runtime": ["zod"],
    "development": ["@types/bun", "bun-types", "typedoc", "typescript"]
  },
  "files": [
    ".env",
    ".env.example",
    ".gitignore",
    "README.md",
    "bun.lock",
    "bunfig.toml",
    "package.json",
    "tsconfig.json"
  ],
  "entities": [
    {
      "name": "BaseEntity",
      "path": "src/domain/entities/base.entity.ts",
      "description": "Classe base para todas as entidades com suporte a validação Zod"
    },
    {
      "name": "User",
      "path": "src/domain/entities/user.entity.ts",
      "description": "Entidade de usuário que estende BaseEntity"
    }
  ],
  "controllers": [
    {
      "name": "BaseController",
      "path": "src/app/base.controller.ts",
      "description": "Controlador base com métodos para criar respostas HTTP padronizadas"
    },
    {
      "name": "UsersController",
      "path": "src/app/users/users.controller.ts",
      "description": "Controlador para operações com usuários"
    }
  ],
  "routes": [
    {
      "path": "/users",
      "methods": ["GET", "POST"],
      "controller": "UsersController"
    },
    {
      "path": "/users/:id",
      "methods": ["GET", "PUT", "DELETE"],
      "controller": "UsersController"
    }
  ],
  "services": [
    {
      "name": "UserService",
      "path": "src/domain/services/user.service.ts",
      "description": "Serviço para gerenciar usuários utilizando o padrão Singleton",
      "pattern": "Singleton",
      "responsibilities": ["Gerenciar usuários", "Validar dados com Zod"]
    }
  ],
  "decorators": [
    {
      "name": "Route",
      "path": "src/shared/decorators/route.decorator.ts",
      "description": "Decorador para definir rotas em métodos de controladores",
      "specializations": ["Get", "Post", "Put", "Delete", "Patch", "Options", "Head"]
    }
  ],
  "updates": [
    {
      "date": "2025-04-20",
      "description": "Refatoração para utilizar as novas funcionalidades do TypeScript 5.8",
      "changes": [
        "Adição de decoradores para rotas",
        "Criação do UserService com padrão Singleton",
        "Melhorias no sistema de tipos com TypeScript 5.8",
        "Adição de validação com Zod",
        "Refatoração dos controladores para usar serviços",
        "Uso de constantes enum para status HTTP"
      ]
    }
  ],
  "notes": "Framework backend modular utilizando TypeScript 5.8 com Bun runtime. Implementa Clean Architecture, SOLID e DDD."
}